<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="capercloud.LoginViewController">
  <children>
    <BorderPane prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <bottom>
        <AnchorPane id="AnchorPane" prefHeight="22.0" BorderPane.alignment="CENTER_RIGHT">
          <children>
            <HBox id="HBox" alignment="CENTER" layoutX="416.0" layoutY="0.0" spacing="5.0">
              <children>
                <Button fx:id="btnSave" disable="false" mnemonicParsing="false" onAction="#handleSaveAction" text="Store Credentials" />
                <Button fx:id="btnLogin" mnemonicParsing="false" onAction="#handleLoginAction" text="Login" />
              </children>
            </HBox>
            <Button layoutX="31.0" layoutY="0.0" mnemonicParsing="false" onAction="#handleCancelAction" text="Cancel" />
          </children>
        </AnchorPane>
      </bottom>
      <center>
        <TabPane fx:id="tpLogin" prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
          <tabs>
            <Tab fx:id="tab0" text="Local Folder">
              <content>
                <AnchorPane id="AnchorPane" prefHeight="369.0" prefWidth="600.0">
                  <children>
                    <TextArea layoutX="23.0" layoutY="25.0" prefHeight="45.0" prefWidth="537.0" text="Your credentials are stored in encrypted files in a folder on your computer. Each stored login has a nickname." wrapText="true" />
                    <Text layoutX="83.0" layoutY="89.0" scaleX="1.0" scaleY="1.0" strokeType="OUTSIDE" strokeWidth="0.0" text="You need to store your credentials before you can use this login method." />
                    <HBox id="HBox" alignment="CENTER" layoutX="24.0" layoutY="109.0" spacing="5.0">
                      <children>
                        <TextField fx:id="tfHomeFolder" disable="false" editable="false" prefWidth="428.0" />
                        <Button mnemonicParsing="false" onAction="#handleChooseFolderAction" text="Choose Folder" />
                      </children>
                    </HBox>
                    <Label layoutX="30.0" layoutY="135.0" text="Stored Logins" />
                    <Label layoutX="30.0" layoutY="282.0" text="Password" />
                    <ListView id="lvLoginLocalFolder" fx:id="lvCredentialsFile" layoutX="34.0" layoutY="159.0" prefHeight="114.0" prefWidth="524.0" />
                    <PasswordField fx:id="pfPassword" layoutX="34.0" layoutY="311.0" prefWidth="524.0" text="" />
                  </children>
                </AnchorPane>
              </content>
            </Tab>
            <Tab fx:id="tab1" text="Direct Login">
              <content>
                <AnchorPane id="Content" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                  <children>
                    <Text layoutX="140.0" layoutY="36.0" strokeType="OUTSIDE" strokeWidth="0.0" text="View your AWS Access Identifiers on Amazon's website " />
                    <GridPane layoutX="14.0" layoutY="62.0" prefWidth="572.0">
                      <children>
                        <Label text="Access Key" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <Label text="Secret Key" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <TextField fx:id="tfAccessKey" prefWidth="200.0" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <TextField fx:id="tfSecretKey" prefWidth="200.0" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                      </children>
                      <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      </columnConstraints>
                      <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      </rowConstraints>
                    </GridPane>
                  </children>
                </AnchorPane>
              </content>
            </Tab>
          </tabs>
        </TabPane>
      </center>
    </BorderPane>
  </children>
</AnchorPane>
